<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane>

    <children>

        <VBox spacing="15" AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
              AnchorPane.bottomAnchor="20">

            <!-- Title -->
            <Label text="Editable Food Log"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Table -->
            <TableView id="tableView" editable="true" prefHeight="320">
                <columns>
                    <TableColumn id="foodCol" text="Food" prefWidth="180"/>
                    <TableColumn id="calCol" text="Calories" prefWidth="100"/>
                    <TableColumn id="nutrientCol" text="Nutrient Type" prefWidth="150"/>
                    <TableColumn id="numCol" text="Amount" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- Buttons -->
            <HBox spacing="10">
                <Button id="addRowButton" text="Add Row" prefWidth="120"/>
                <Button id="deleteRowButton" text="Delete Selected" prefWidth="150"/>
            </HBox>

        </VBox>

    </children>

</AnchorPane>
