<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.test.FoodController"
            prefWidth="650" prefHeight="420">

    <children>

        <VBox spacing="15" AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
              AnchorPane.bottomAnchor="20">

            <!-- Title -->
            <Label text="Food Log"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Table -->
            <TableView fx:id="tableView" editable="true" prefHeight="320">
                <columns>
                    <TableColumn fx:id="foodCol" text="Food" prefWidth="180"/>
                    <TableColumn fx:id="calCol" text="Calories" prefWidth="100"/>
                    <TableColumn fx:id="nutrientCol" text="Nutrient Type" prefWidth="150"/>
                    <TableColumn fx:id="numCol" text="Amount" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- Buttons -->
            <HBox spacing="10">
                <Button fx:id="addRowButton" text="Add Row" prefWidth="120"/>
                <Button fx:id="deleteRowButton" text="Delete Selected" prefWidth="150"/>
            </HBox>

        </VBox>

    </children>

</AnchorPane>
